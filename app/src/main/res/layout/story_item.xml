<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_five_dp"
    app:cardElevation="@dimen/margin_five_dp"
    app:cardCornerRadius="@dimen/margin_five_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_ten_dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/addedByTextView"
            android:textColor="@color/stratos"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/sienna"
            android:layout_margin="@dimen/root_element_margin"
            android:id="@+id/mainContentTextView"/>

        <ImageView
            android:id="@+id/story_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/margin_five_dp"
            android:contentDescription="@string/story_image"
            android:scaleType="fitCenter" />

    </LinearLayout>

</android.support.v7.widget.CardView>
